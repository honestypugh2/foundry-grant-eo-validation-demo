# Azure AI Foundry Configuration
AZURE_AI_FOUNDRY_PROJECT_ENDPOINT=your_foundry_project_endpoint_here
AZURE_AI_FOUNDRY_ENDPOINT=your_foundry_endpoint_here
AZURE_AI_FOUNDRY_API_KEY=your_foundry_api_key_here
AZURE_AI_FOUNDRY_PROJECT_ID=your_foundry_project_id_here
AZURE_AI_FOUNDRY_PROJECT_NAME=your_foundry_project_name_here
AZURE_AI_FOUNDRY_PROJECT_DESCRIPTION=your_foundry_project_description_here
AZURE_AI_FOUNDRY_PROJECT_VERSION=1.0.0  # Version of the project
AZURE_AI_FOUNDRY_PROJECT_CLIENT=your_foundry_project_client_here
AI_PROJECT_CLIENT=your_ai_project_client_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-10-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_KEY=your_api_key_here

# Azure AI Search Configuration
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_INDEX_NAME=grant-compliance-index
AZURE_SEARCH_API_KEY=your_search_api_key_here

# Azure AI Search Document Truncation
AZURE_SEARCH_DOCUMENT_CONTENT_TRUNCATION_SIZE=10000  # Truncation size of documents

# Azure Document Intelligence Configuration
AZURE_DOCUMENT_INTELLIGENCE_REGION=your_region_here
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-region.api.cognitive.microsoft.com
AZURE_DOCUMENT_INTELLIGENCE_API_KEY=your_doc_intel_key_here

# Authentication Method
# Set to "true" to use Managed Identity (recommended for production)
# Set to "false" to use API keys (for local development)
USE_MANAGED_IDENTITY=false

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Demo Configuration
DEMO_MODE=true

# Knowledge Base Configuration
# Set to "azure" to use Azure AI Search, "local" to use local file system
KNOWLEDGE_BASE_SOURCE=local
KNOWLEDGE_BASE_PATH=./knowledge_base
KNOWLEDGE_BASE_EXECUTIVE_ORDERS_PATH=./knowledge_base/sample_executive_orders
SAMPLE_PROPOSALS_PATH=./knowledge_base/sample_proposals

# Email Notification Configuration
# Microsoft Graph API (for real email sending)
AZURE_CLIENT_ID=your_client_id_here
AZURE_CLIENT_SECRET=your_client_secret_here
AZURE_TENANT_ID=your_tenant_id_here
SENDER_EMAIL=your_email@example.com
ATTORNEY_EMAIL=attorney@example.com

# SMTP Fallback Configuration (open-source alternative)
SMTP_ENABLED=true
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your_email_here
SMTP_PASSWORD=your_password_here

# Azure Function Apps (alternative method)
AZURE_FUNCTION_EMAIL_URL=https://your-function-app.azurewebsites.net/api/SendEmail
AZURE_FUNCTION_EMAIL_KEY=your_function_key_here

# SharePoint Configuration (for production)
SHAREPOINT_SITE_URL=https://yourtenant.sharepoint.com/sites/yoursite
SHAREPOINT_LIBRARY_NAME=GrantProposals
SHAREPOINT_CLIENT_ID=your_client_id
SHAREPOINT_CLIENT_SECRET=your_client_secret

# Logging and Monitoring
LOG_LEVEL=INFO
AZURE_APPLICATION_INSIGHTS_CONNECTION_STRING=your_app_insights_connection_string

# Environment variable for React/Vue frontend to connect to backend API
VITE_API_URL=http://localhost:8000
